<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
  "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
  "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
<tiles-definitions>
    <definition name="base" template="/WEB-INF/tiles/main_template.jsp">
        <put-attribute name="header" value="/WEB-INF/tiles/main_header.jsp" />
        <put-attribute name="footer" value="/WEB-INF/tiles/main_footer.jsp" /> 
    </definition>
    <definition name="base1" template="/WEB-INF/tiles/boot_template.jsp">
        <put-attribute name="header" value="/WEB-INF/tiles/boot_header.jsp" />
        <put-attribute name="footer" value="/WEB-INF/tiles/boot_footer.jsp" /> 
    </definition>
 
 	<definition name="*.page" extends="base">
 		<put-attribute name="body" value="/WEB-INF/template/index.jsp" />
 	</definition>
 
     <definition name="*/*.page" extends="base1">
         <put-attribute name="body" value="/WEB-INF/template/{1}/{2}.jsp" />
     </definition>
    
    <definition name="*/*/*.page" extends="base1">
        <put-attribute name="body" value="/WEB-INF/template/{1}/{2}/{3}.jsp" />
    </definition>
</tiles-definitions>